    async def handle_risk(self, update: Any, context: Any) -> None:
        """Handle /risk command"""
        try:
            current_risk = (self.bot.consecutive_losses / MAX_CONSECUTIVE_LOSSES) * 100
            daily_loss_pct = (abs(self.bot.daily_profit) / self.bot.current_balance) * 100 if self.bot.daily_profit < 0 else 0
            
            risk_msg = f"""âš ï¸ <b>Risk Management Status</b>
{'â•' * 35}

ğŸ“Š <b>Current Risk Level:</b>
ğŸ”¸ Consecutive Losses: {self.bot.consecutive_losses}/{MAX_CONSECUTIVE_LOSSES}
ğŸ”¸ Risk Level: {current_risk:.1f}%
ğŸ”¸ Daily Loss: {daily_loss_pct:.1f}% of balance

ğŸ›¡ï¸ <b>Protection Measures:</b>
ğŸ”¸ Auto Cooldown: {'Active' if self.bot.is_in_cooldown() else 'Inactive'}
ğŸ”¸ Max Daily Loss: ${MAX_DAILY_LOSS:.2f}
ğŸ”¸ Position Size: Dynamic based on confidence

ğŸ“ˆ <b>Risk Assessment:</b>
{'ğŸŸ¢ Low Risk' if current_risk < 50 else 'ğŸŸ¡ Medium Risk' if current_risk < 80 else 'ğŸ”´ High Risk'}

ğŸ’¡ <b>Recommendations:</b>
{'Continue trading with current settings' if current_risk < 50 else 'Consider reducing position size' if current_risk < 80 else 'Take a break and review strategy'}"""
            
            await update.message.reply_text(risk_msg, parse_mode='HTML')
            
        except Exception as e:
            await update.message.reply_text(f"âŒ Error getting risk info: {e}")
    
