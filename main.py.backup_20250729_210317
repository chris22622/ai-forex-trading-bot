    async def handle_cooldown(self, update: Any, context: Any) -> None:
        """Handle /cooldown command"""
        try:
            if self.bot.is_in_cooldown():
                if self.bot.cooldown_until:
                    remaining = self.bot.cooldown_until - datetime.now()
                    cooldown_msg = f"""â„ï¸ <b>Cooldown Active</b>
{'â•' * 25}

â° <b>Time Remaining:</b> {str(remaining).split('.')[0]}
ğŸš¨ <b>Reason:</b> {self.bot.consecutive_losses} consecutive losses
ğŸ“Š <b>Status:</b> Trading suspended

ğŸ’¡ Use /resume to override cooldown (not recommended)"""
                else:
                    cooldown_msg = "â„ï¸ <b>Cooldown Active</b> (time unknown)"
            else:
                cooldown_msg = f"""âœ… <b>No Active Cooldown</b>
{'â•' * 25}

ğŸ¯ <b>Status:</b> Trading active
ğŸ“Š <b>Consecutive Losses:</b> {self.bot.consecutive_losses}
âš ï¸ <b>Cooldown Trigger:</b> {MAX_CONSECUTIVE_LOSSES} losses

ğŸ’¡ Bot will auto-cooldown after consecutive losses."""
            
            await update.message.reply_text(cooldown_msg, parse_mode='HTML')
            
        except Exception as e:
            await update.message.reply_text(f"âŒ Error checking cooldown: {e}")
    
