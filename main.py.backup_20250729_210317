def safe_import_mt5():
    """Safely import MT5 with timeout and error handling - FIXED"""
    global mt5_available, MT5TradingInterface
    
    try:
        logger.info("ğŸ”§ Attempting to import MetaTrader5...")
        import MetaTrader5 as mt5  # type: ignore
        logger.info("âœ… MetaTrader5 package imported successfully")
        
        # Check if MT5 terminal is available
        try:
            if hasattr(mt5, 'initialize') and mt5.initialize():  # type: ignore
                logger.info("âœ… MT5 terminal connection successful")
                if hasattr(mt5, 'shutdown'):
                    mt5.shutdown()  # type: ignore # Close test connection
            else:
                if hasattr(mt5, 'last_error'):
                    error = mt5.last_error()  # type: ignore
                    logger.warning(f"âš ï¸ MT5 terminal connection failed: {error}")
                else:
                    logger.warning("âš ï¸ MT5 terminal connection failed: Unknown error")
                logger.warning("ğŸ’¡ MetaTrader 5 package available but terminal not ready")
        except Exception as term_e:
            logger.warning(f"âš ï¸ MT5 terminal test failed: {term_e}")
        
        # FIXED: Import MT5 interface directly without complex threading
        logger.info("ğŸ”§ Importing MT5 trading interface...")
        try:
            from mt5_integration import MT5TradingInterface  # type: ignore
            
            # Test interface creation
            MT5TradingInterface()  # Create instance to test, no need to assign
            logger.info("âœ… MT5TradingInterface created successfully")
            
            # Set global variables
            mt5_available = True
            globals()['MT5TradingInterface'] = MT5TradingInterface
            
            logger.info("âœ… MT5 integration fully available and ready")
            return True
                
        except Exception as interface_e:
            logger.error(f"âŒ MT5 interface import error: {interface_e}")
            return False
            
    except ImportError as e:
        logger.error(f"âŒ MetaTrader5 package not available: {e}")
        logger.error("ğŸ’¡ Install with: pip install MetaTrader5")
        return False
    except Exception as e:
        logger.error(f"âŒ MT5 import error: {e}")
        return False

